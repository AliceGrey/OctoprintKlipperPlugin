<div id="klipper_editor_dialog" class="modal hide fade large" tabindex="-1" role="dialog" aria-labelledby="klipper_editor_dialog_label" aria-hidden="true">
   <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h3 id="klipper_pid_tuning_dialog_label">{{ _('Config Editor') }}</h3>
   </div>
   <div class="modal-body">
      <div class="full-sized-box">
        <div class="conf-files">
          <div class="pull-right">
            <div class="btn-group">
              <button class="btn btn-small dropdown-toggle" data-toggle="dropdown"><i class="fas fa-wrench"></i> <span class="caret"></span></button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><a href="javascript:void(0)" data-bind="click: function() { fileList.changeSorting('name'); }"><i class="fas fa-check" data-bind="style: {visibility: fileList.currentSorting() == 'name' ? 'visible' : 'hidden'}"></i> {{ _('Sort by name') }} ({{ _('ascending') }})</a></li>
                <li><a href="javascript:void(0)" data-bind="click: function() { fileList.changeSorting('date'); }"><i class="fas fa-check" data-bind="style: {visibility: fileList.currentSorting() == 'date' ? 'visible' : 'hidden'}"></i> {{ _('Sort by date') }} ({{ _('descending') }})</a></li>
                <li><a href="javascript:void(0)" data-bind="click: function() { fileList.changeSorting('size'); }"><i class="fas fa-check" data-bind="style: {visibility: fileList.currentSorting() == 'size' ? 'visible' : 'hidden'}"></i> {{ _('Sort by file size') }} ({{ _('descending') }})</a></li>
              </ul>
            </div>
          </div>
          <div class="pull-left" data-bind="visible: hasRight('CONFIG', 'Ko')">
            <div class="btn-group">
              <button class="btn btn-small dropdown-toggle" data-toggle="dropdown"><i class="far fa-square"></i> <span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><a href="javascript:void(0)" data-bind="click: markFilesOnPage">{{ _('Select all on this page') }}</a></li>
                  <li><a href="javascript:void(0)" data-bind="click: markAllFiles">{{ _('Select all') }}</a></li>
                  <li class="divider"></li>
                  <li><a href="javascript:void(0)" data-bind="click: clearMarkedFiles">{{ _('Clear selection') }}</a></li>
                </ul>
              </div>
            <button class="btn btn-small" data-bind="click: removeMarkedFiles, enable: markedForFileDeletion().length > 0">{{ _('Delete selected') }}</button>
          </div>
          <table class="table table-striped table-hover table-condensed table-hover" id="timelapse_files">
            <thead>
              <tr>
                <th class="klipper_files_checkbox"></th>
                <th class="klipper_files_name">{{ _('Name') }}</th>
                <th class="klipper_files_size">{{ _('Size') }}</th>
                <th class="klipper_files_action">{{ _('Action') }}</th>
              </tr>
            </thead>
            <tbody data-bind="foreach: fileList.paginatedItems">
              <tr data-bind="attr: {title: name}">
                <td class="klipper_files_checkbox"><input type="checkbox" data-bind="value: name, checked: $root.markedForFileDeletion, invisible: !hasRight('CONFIG', 'Ko'))()"></td>
                <td class="klipper_files_name" data-bind="text: name"></td>
                <td class="klipper_files_size" data-bind="text: size"></td>
                <td class="klipper_files_action"><a href="javascript:void(0)" class="far fa-trash-alt" data-bind="click: function() { $parent.removeFile($data.name); }, css: {disabled: !hasRight('CONFIG', 'Ko'))() }"></a>&nbsp;|&nbsp;<a href="javascript:void(0)" class="fas fa-download" data-bind="css: {disabled: !hasRight('CONFIG', 'Ko'))()}, attr: { href: (hasRight('CONFIG', 'Ko'))) ? $data.url : 'javascript:void(0)' }"></a>&nbsp;|&nbsp;<a href="javascript:void(0)" class="fas fa-camera" data-bind="css: {disabled: !$root.isFileEditable($data)}, click: $root.showFileEditor"></a></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
   </div>
   <div class="modal-footer">
   </div>
</div>
<div id="klipper_editor_spinner" class="modal hide fade small" tabindex="-1" role="dialog" aria-hidden="true">
   <img src="plugin/klipper/static/img/spinner.gif" width="100" height="100">
   <span class="help-inline">
      Depending on the size of the config file this might take a while.
   </span>
</div>
